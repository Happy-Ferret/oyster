{
  "manifest_version": 2,

  "name": "Oyster",
  "description": "OpenPGP password store",
  "version": "0.1.0",

  "permissions": [
    "http://localhost:45566/",
    "activeTab",
    "tabs",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["background.js"]
  }
}
